    <section class="container">
        <div class="error">
            {{#if message}}
                <div class="entry">
                <h1>{{message}}</h1>
                </div>
            {{/if}}
        </div>
        <form action="/reg" method="POST" class="input-fields">
            <input type="text" name="reg" id="reg-number" placeholder="Registration Number">
            <input type="submit" value="Add" id="add" name="add">
        </form>
        <div id="example">e.g CA00000/CA000-000</div>
        <form action="/show" method="post">
            <div class="radio-btns">
                {{#each townNames}}
                    <div class="radio">
                        <input type="radio" value="{{town_id}}" id="town" name="town">
                        <label for="Cape Town">{{town_name}}</label>
                    </div>
                {{/each}}
            <div class="radio">
                <input type="radio" value="All" id="town" name="town">
                <label for="Show All">Show All</label>
            </div>
            </div>
            <div class="submit-radio">
                 <input type="submit" id="remove" value="Show">
            </div>
        </form>

          <div class="reg">
            {{#each regNums}}
              <h2>{{reg_num}}</h2>
            {{/each}}
          </div>
        <form action="/remove" method="post">
            <input type="submit" value="Remove All Registration Numbers" id="removeAll">
        </form>
    </section>